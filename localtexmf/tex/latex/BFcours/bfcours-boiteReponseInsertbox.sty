\newcommand{\addblocktoc}[1]{%
  \addcontentsline{toc}{subsection}{\protect\numberline{}#1}
  {
    \hypersetup{linkcolor=white}
    \textbf{\hyperlink{hautpage}{#1}}\label{subsec:#1}
  }
}

\newcommand{\boitecouleur}{gray!75!black}
\NewDocumentCommand\boite{m O{} m}{
\begin{tcolorbox}[nobeforeafter,title=#1,halign title=flush left,fonttitle=\bfseries,colbacktitle=\boitecouleur,coltitle=white,colback=white,colframe=\boitecouleur, #2]%red!50!black
#3
\end{tcolorbox}
}

\newcommand\bg[2]{
\begin{tcolorbox}[tcbox raise base, breakable, nobeforeafter, capture=hbox, title=\textbf{#1},colbacktitle=nota,coltitle=white,colback=white]
#2
\end{tcolorbox}
}
\newcommand\Question[1]{
\begin{tcolorbox}[tcbox raise base, nobeforeafter, capture=hbox, title=\textbf{Question :},colbacktitle=act,coltitle=white,colback=white]
#1
\end{tcolorbox}
}
\newcommand\boiteT[3][\columnwidth]{
\begin{tcolorbox}[nobeforeafter,width=#1,title=\textbf{#2},fonttitle=\scriptsize,colbacktitle=red!50!black,coltitle=white,colback=white]
#3
\end{tcolorbox}
}
\newcommand\insertbox[2]{
\tcboxmath[tcbox raise base,nobeforeafter,boxsep=1pt, bottom=1pt,fonttitle=\scriptsize, title=#1,hyphenationfix,colframe=red!50!black,colback=white]{#2}
}

\newcommand\inserT[2][colframe=blue]{
\tcboxmath[tcbox raise base,nobeforeafter,boxsep=1pt, bottom=1pt,fonttitle=\scriptsize,hyphenationfix,colback=white,#1]{#2}%title=#1
}

